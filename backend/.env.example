# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# JWT Secret for authentication
JWT_SECRET=your_secret_key_here

# Server Port (optional, defaults to 5000)
PORT=9000

# SendGrid Email Service Configuration
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Verified Sender Email (MUST be verified in SendGrid)
# Verify at: https://app.sendgrid.com/settings/sender_auth
EMAIL_SENDER=your-verified-email@example.com

# Test email address (optional, for testing email service)
TEST_EMAIL=test-recipient@example.com
